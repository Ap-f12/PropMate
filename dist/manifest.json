{
  "manifest_version": 3,
  "name": "PropMate",
  "description": "Enhance property browsing experience on Trademe",
  "version": "1.0.0",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "popup.html",
    "default_title": "PropMate",
    "default_icon": "icon.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://*.trademe.co.nz/a/property/residential/sale*",
        "*://*.trademe.co.nz/a/property/residential/rent*"
      ],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "host_permissions": ["https://maps.googleapis.com/*"],
  "permissions": ["storage"]
}
